    <script>
        const wrapText = (text, charLimit) => {
            if (typeof text !== 'string' || text.length <= charLimit) {
                return text;
            }
            const words = text.split(' ');
            const lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + ' ' + word).trim().length > charLimit) {
                    if(currentLine) lines.push(currentLine.trim());
                    currentLine = word;
                } else {
                    currentLine = (currentLine + ' ' + word).trim();
                }
            });
            if (currentLine) {
                lines.push(currentLine.trim());
            }
            return lines;
        };

        const createTooltipTitleCallback = () => {
            return function(tooltipItems) {
                const item = tooltipItems[0];
                if (!item) return '';
                let label = item.chart.data.labels[item.dataIndex];
                if (Array.isArray(label)) {
                    return label.join(' ');
                }
                return label;
            };
        };

        const priorityCtx = document.getElementById('priorityChart').getContext('2d');
        new Chart(priorityCtx, {
            type: 'doughnut',
            data: {
                labels: ['High Priority', 'Future Improvements'],
                datasets: [{
                    label: 'Issues by Priority',
                    data: [9, 3],
                    backgroundColor: ['#ef4444', '#f59e0b'],
                    borderColor: ['#ffffff'],
                    borderWidth: 5,
                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            font: { size: 14, family: 'Inter' },
                            color: '#374151',
                            padding: 20,
                        }
                    },
                    tooltip: {
                        callbacks: {
                            title: createTooltipTitleCallback()
                        }
                    }
                },
                cutout: '65%'
            }
        });

        const categoryLabels = [
            wrapText('Core Logic & Flow', 16),
            wrapText('Data & Features', 16), 
            wrapText('Language & UI', 16),
        ];

        const categoryCtx = document.getElementById('categoryChart').getContext('2d');
        new Chart(categoryCtx, {
            type: 'bar',
            data: {
                labels: categoryLabels,
                datasets: [{
                    label: 'Number of Issues',
                    data: [5, 4, 3], 
                    backgroundColor: ['#166088', '#5398BE', '#84C5F4'],
                    borderRadius: 5,
                    barPercentage: 0.7,
                    categoryPercentage: 0.8
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            title: createTooltipTitleCallback()
                        }
                    }
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        grid: {
                            display: false,
                            drawBorder: false,
                        },
                        ticks: {
                           stepSize: 1,
                           color: '#6b7280'
                        }
                    },
                    y: {
                        grid: {
                            display: false,
                            drawBorder: false,
                        },
                         ticks: {
                           color: '#374151',
                           font: {
                               weight: '500'
                           }
                        }
                    }
                }
            }
        });
    </script>
